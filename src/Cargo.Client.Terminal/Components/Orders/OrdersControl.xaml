<UserControl x:Class="Cargo.Client.Terminal.Components.Orders.OrdersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cargo.Client.Terminal.Components.Orders"
             xmlns:persisting="clr-namespace:Cargo.Client.Persisting.Entity;assembly=Cargo.Client.Persisting"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             >
    <Grid>
        <TreeView ItemsSource="{Binding Orders}" >
            <TreeView.Resources>
                <HierarchicalDataTemplate
                    DataType="{x:Type local:OrderViewModel}"
                    ItemsSource="{Binding OrderParts}">
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate
                    DataType="{x:Type local:OrderPartViewModel}">
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</UserControl>
