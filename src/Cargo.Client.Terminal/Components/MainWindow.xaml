<Window x:Class="Cargo.Client.Terminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cargo.Client.Terminal.Components"
        xmlns:orders="clr-namespace:Cargo.Client.Terminal.Components.Orders"
        xmlns:batch="clr-namespace:Cargo.Client.Terminal.Components.Batch"
        mc:Ignorable="d"
        Title="Cargo" Height="600" Width="800" WindowState="Normal" WindowStartupLocation="CenterScreen">
    <DockPanel LastChildFill="True">
        <Menu Width="Auto" DockPanel.Dock="Top" />
        <ToolBar Width="Auto" DockPanel.Dock="Bottom" />
        <StatusBar DockPanel.Dock="Bottom" />

        <orders:OrdersControl DockPanel.Dock="Left"/>
        <batch:BatchControl DockPanel.Dock="Right"/>
    </DockPanel>

</Window>
